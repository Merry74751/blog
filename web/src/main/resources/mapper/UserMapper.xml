<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.yu.blog.mapper.UserMapper">
    <insert id="insert">
        insert into blog_user(
        <if test="userId != null">
            user_id,
        </if>
        <if test="account != null">
            account,
        </if>
        <if test="username != null">
            username,
        </if>
        <if test="password != null">
            password,
        </if>
        <if test="telephone != null">
            telephone,
        </if>
        <if test="sex != null">
            sex,
        </if>
        <if test="fans != null">
            fans,
        </if>
        <if test="focus != null">
            focus,
        </if>
        <if test="likes != null">
            likes,
        </if>
        <if test="status != null">
            status,
        </if>
        <if test="icon != null">
            icon,
        </if>
        <if test="createTime != null">
            create_time
        </if>
        )values(
        <if test="userId != null">
            #{userId},
        </if>
        <if test="account != null">
            #{account},
        </if>
        <if test="username != null">
            #{username},
        </if>
        <if test="password != null">
            #{password},
        </if>
        <if test="telephone != null">
            #{telephone},
        </if>
        <if test="sex != null">
            #{sex},
        </if>
        <if test="fans != null">
            #{fans},
        </if>
        <if test="focus != null">
            #{focus},
        </if>
        <if test="likes != null">
            #{likes},
        </if>
        <if test="status != null">
            #{status},
        </if>
        <if test="icon != null">
            #{icon},
        </if>
        <if test="createTime != null">
            #{createTime}
        </if>
        )
    </insert>

    <delete id="deleteById">
        delete from blog_user
        where user_id = #{id}
    </delete>

    <delete id="deleteByName">
        delete from blog_user
        where username = #{username}
    </delete>

    <update id="updateById">
        update blog_user
        <set>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="telephone != null">
                telephone = #{telephone},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="fans != null">
                fans = #{fans},
            </if>
            <if test="focus != null">
                focus = #{focus},
            </if>
            <if test="likes != null">
                likes = #{likes},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="icon != null">
                icon = #{icon},
            </if>
            <if test="account != null">
                account = #{account},
            </if>
            <if test="userId != null">
                user_id = #{userId}
            </if>
        </set>
        where user_id = #{userId}
    </update>

    <select id="getByAccount" resultMap="user">
        <include refid="common-select" />
        where account = #{account}
    </select>

    <select id="getByTelephone" resultMap="user">
        <include refid="common-select" />
        where telephone = #{telephone}
    </select>

    <select id="getById" resultMap="user">
        <include refid="common-select" />
        where user_id = #{userId}
    </select>

    <select id="getByName" resultMap="user">
        <include refid="common-select" />
        where username = #{username}
    </select>

    <select id="list" resultMap="user">
        <include refid="noPass-select" />
    </select>

    <select id="page" resultMap="user">
        <include refid="common-select" />
    </select>

    <select id="pageByQuery" resultMap="user">
        <include refid="noPass-select" />
        <where>
            <include refid="common-query" />
        </where>
    </select>

    <sql id="common-select">
        select
            user_id,account,username,password,
            telephone,sex,fans,focus,likes,
            create_time,status,icon
        from
            blog_user
    </sql>

    <sql id="noPass-select">
        select
            user_id,account,username,
            telephone,sex,fans,focus,likes,
            create_time,status,icon
        from
            blog_user
    </sql>

    <sql id="common-query">
        <if test="query != null">

        </if>
    </sql>
    <resultMap id="user" type="io.github.yu.blog.model.User">
        <id property="userId" column="user_id" />
        <result property="account" column="account"/>
        <result property="username" column="username" />
        <result property="password" column="password" />
        <result property="telephone" column="telephone" />
        <result property="sex" column="sex" />
        <result property="fans" column="fans" />
        <result property="focus" column="focus" />
        <result property="likes" column="likes" />
        <result property="createTime" column="create_time" />
        <result property="status" column="status" />
        <result property="icon" column="icon" />
    </resultMap>
</mapper>